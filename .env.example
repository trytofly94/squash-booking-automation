# Booking Configuration
DAYS_AHEAD=20
TARGET_START_TIME=14:00
DURATION=60
MAX_RETRIES=3
DRY_RUN=true

# Logging Configuration
LOG_LEVEL=info

# Authentication (optional)
USER_EMAIL=
USER_PASSWORD=

# Live Analysis Credentials (optional)
ANALYSIS_EMAIL=
ANALYSIS_PASSWORD=

# Advanced Settings
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000
BASE_URL=https://www.eversports.de

# Advanced Booking Logic (Issue #9)
TIMEZONE=Europe/Berlin
PREFERRED_COURTS=1,3,5
BOOKING_PATTERN_LEARNING=false
FALLBACK_TIME_RANGE=120

# Pattern Learning Performance (Issue #33)
# Timeout for loading pattern data in milliseconds
PATTERN_LOAD_TIMEOUT_MS=5000
# Enable lazy loading of pattern data (loads on first use instead of startup)
PATTERN_LAZY_LOADING=true

# Court Scoring Weights (must sum to 1.0)
COURT_WEIGHT_AVAILABILITY=0.4
COURT_WEIGHT_HISTORICAL=0.3
COURT_WEIGHT_PREFERENCE=0.2
COURT_WEIGHT_POSITION=0.1

# Time Preferences
TIME_FLEXIBILITY=30
# Additional preferences in JSON format (optional)
# ADDITIONAL_TIME_PREFERENCES=[{"startTime":"13:30","priority":8,"flexibility":15},{"startTime":"14:30","priority":7,"flexibility":20}]

# Enhanced Monitoring & Observability (Issue #8)
# Correlation ID tracking for request tracing
LOG_CORRELATION_ID=true

# Performance monitoring and logging
LOG_PERFORMANCE=true
PERFORMANCE_THRESHOLD_WARNING=5000
PERFORMANCE_THRESHOLD_ERROR=10000

# Metrics collection (for future Prometheus integration)
METRICS_ENABLED=false
MAX_METRICS_HISTORY=1000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=30000
WEBSITE_URL=https://www.eversports.de/sb/sportcenter-kautz?sport=squash
HEALTH_CHECK_RETRIES=3

# Alert Thresholds
ALERT_THRESHOLD_RESPONSE_TIME=5000
ALERT_THRESHOLD_ERROR_RATE=10
ALERT_THRESHOLD_MEMORY=80

# Booking Analytics
BOOKING_ANALYTICS_ENABLED=true
BOOKING_ANALYTICS_HISTORY=1000

# Robust Retry Mechanisms (Issue #7)
# Global retry configuration
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=5
RETRY_MIN_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_JITTER_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000
CIRCUIT_BREAKER_REQUEST_VOLUME_THRESHOLD=10
CIRCUIT_BREAKER_ROLLING_WINDOW=60000
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=3

# Error-specific Retry Settings
RETRY_NETWORK_ATTEMPTS=5
RETRY_RATE_LIMIT_ATTEMPTS=3
RETRY_SERVER_ERROR_ATTEMPTS=2
RETRY_TIMEOUT_ATTEMPTS=4

# Advanced Retry Features
RETRY_EXPONENTIAL_BACKOFF=true
RETRY_EXPONENTIAL_BASE=2
RETRY_ABORT_ON_CLIENT_ERRORS=true

# Test Configuration Optimization (Issue #34)
# Project selection for Playwright tests
# Options: dev (Chrome only), cross (Chrome/Firefox/Safari), full (all browsers), ci (full for CI)
# Custom: comma-separated browser names (e.g., "Google Chrome,firefox")
PLAYWRIGHT_PROJECTS=dev

# Browser Context Pooling (Issue #36)
# Maximum number of browser contexts to maintain in pool
CONTEXT_POOL_MAX_SIZE=3

# Maximum age of a context in milliseconds before replacement (30 minutes)
CONTEXT_POOL_MAX_AGE=1800000

# Minimum number of warm contexts to keep ready
CONTEXT_POOL_MIN_WARM=1

# Health check interval for context pool in milliseconds (5 minutes)
CONTEXT_POOL_HEALTH_CHECK=300000

# Enable context pre-warming for faster subsequent requests
CONTEXT_POOL_ENABLE_PREWARMING=true

# Maximum failures before context is considered unhealthy (default: 3)
CONTEXT_POOL_FAILURE_THRESHOLD=3

# Time Slot Cache Configuration (Issue #35)
# Enable/disable time slot caching for performance optimization
TIME_SLOT_CACHE_ENABLED=true

# Maximum number of cached time slot entries
TIME_SLOT_CACHE_MAX_SIZE=100

# Time-to-live for cache entries in milliseconds (1 hour default)
TIME_SLOT_CACHE_TTL_MS=3600000

# Enable debug logging for cache operations
TIME_SLOT_CACHE_DEBUG=false

# Enable cache warming on startup with common configurations
TIME_SLOT_CACHE_WARMING=true
