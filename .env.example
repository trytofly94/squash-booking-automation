# Booking Configuration
DAYS_AHEAD=20
TARGET_START_TIME=14:00
DURATION=60
MAX_RETRIES=3
DRY_RUN=true

# Logging Configuration
LOG_LEVEL=info

# Authentication (optional)
USER_EMAIL=
USER_PASSWORD=

# Advanced Settings
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000
BASE_URL=https://www.eversports.de

# Advanced Booking Logic (Issue #9)
TIMEZONE=Europe/Berlin
PREFERRED_COURTS=1,3,5
BOOKING_PATTERN_LEARNING=false
FALLBACK_TIME_RANGE=120

# Court Scoring Weights (must sum to 1.0)
COURT_WEIGHT_AVAILABILITY=0.4
COURT_WEIGHT_HISTORICAL=0.3
COURT_WEIGHT_PREFERENCE=0.2
COURT_WEIGHT_POSITION=0.1

# Time Preferences
TIME_FLEXIBILITY=30
# Additional preferences in JSON format (optional)
# ADDITIONAL_TIME_PREFERENCES=[{"startTime":"13:30","priority":8,"flexibility":15},{"startTime":"14:30","priority":7,"flexibility":20}]

# Enhanced Monitoring & Observability (Issue #8)
# Correlation ID tracking for request tracing
LOG_CORRELATION_ID=true

# Performance monitoring and logging
LOG_PERFORMANCE=true
PERFORMANCE_THRESHOLD_WARNING=5000
PERFORMANCE_THRESHOLD_ERROR=10000

# Metrics collection (for future Prometheus integration)
METRICS_ENABLED=false
MAX_METRICS_HISTORY=1000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=30000
WEBSITE_URL=https://www.eversports.de/sb/sportcenter-kautz?sport=squash
HEALTH_CHECK_RETRIES=3

# Alert Thresholds
ALERT_THRESHOLD_RESPONSE_TIME=5000
ALERT_THRESHOLD_ERROR_RATE=10
ALERT_THRESHOLD_MEMORY=80

# Booking Analytics
BOOKING_ANALYTICS_ENABLED=true
BOOKING_ANALYTICS_HISTORY=1000

# Robust Retry Mechanisms (Issue #7)
# Global retry system configuration
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=5
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_BACKOFF_MULTIPLIER=2
RETRY_MAX_JITTER=0.1
RETRY_DETAILED_LOGGING=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300000
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=3
CIRCUIT_BREAKER_HALF_OPEN_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_ON_SUCCESS=true

# Error-Specific Retry Settings
# Network Error Strategy
RETRY_ON_NETWORK_ERROR=true
RETRY_NETWORK_MAX_ATTEMPTS=5
RETRY_NETWORK_INITIAL_DELAY=1000
RETRY_NETWORK_MAX_DELAY=16000
RETRY_NETWORK_BACKOFF_MULTIPLIER=2
RETRY_NETWORK_MAX_JITTER=0.1
RETRY_NETWORK_USE_CIRCUIT_BREAKER=true

# Timeout Error Strategy
RETRY_ON_TIMEOUT=true
RETRY_TIMEOUT_MAX_ATTEMPTS=3
RETRY_TIMEOUT_INITIAL_DELAY=2000
RETRY_TIMEOUT_MAX_DELAY=10000
RETRY_TIMEOUT_BACKOFF_MULTIPLIER=2.5
RETRY_TIMEOUT_MAX_JITTER=0.15
RETRY_TIMEOUT_USE_CIRCUIT_BREAKER=true

# Rate Limiting Error Strategy
RETRY_ON_RATE_LIMIT=true
RETRY_RATE_LIMIT_MAX_ATTEMPTS=3
RETRY_RATE_LIMIT_INITIAL_DELAY=5000
RETRY_RATE_LIMIT_MAX_DELAY=45000
RETRY_RATE_LIMIT_BACKOFF_MULTIPLIER=3
RETRY_RATE_LIMIT_MAX_JITTER=0.2
RETRY_RATE_LIMIT_USE_CIRCUIT_BREAKER=true

# Server Error Strategy
RETRY_ON_SERVER_ERROR=true
RETRY_SERVER_MAX_ATTEMPTS=3
RETRY_SERVER_INITIAL_DELAY=3000
RETRY_SERVER_MAX_DELAY=27000
RETRY_SERVER_BACKOFF_MULTIPLIER=3
RETRY_SERVER_MAX_JITTER=0.1
RETRY_SERVER_USE_CIRCUIT_BREAKER=true

# Authentication Error Strategy
RETRY_ON_AUTH_ERROR=true
RETRY_AUTH_MAX_ATTEMPTS=2
RETRY_AUTH_INITIAL_DELAY=2000
RETRY_AUTH_MAX_DELAY=5000
RETRY_AUTH_BACKOFF_MULTIPLIER=2.5
RETRY_AUTH_MAX_JITTER=0.05
RETRY_AUTH_USE_CIRCUIT_BREAKER=false

# Navigation Error Strategy
RETRY_ON_NAVIGATION_ERROR=true
RETRY_NAVIGATION_MAX_ATTEMPTS=3
RETRY_NAVIGATION_INITIAL_DELAY=2000
RETRY_NAVIGATION_MAX_DELAY=8000
RETRY_NAVIGATION_BACKOFF_MULTIPLIER=2
RETRY_NAVIGATION_MAX_JITTER=0.1
RETRY_NAVIGATION_USE_CIRCUIT_BREAKER=true

# Booking Error Strategy
RETRY_ON_BOOKING_ERROR=true
RETRY_BOOKING_MAX_ATTEMPTS=2
RETRY_BOOKING_INITIAL_DELAY=3000
RETRY_BOOKING_MAX_DELAY=12000
RETRY_BOOKING_BACKOFF_MULTIPLIER=2
RETRY_BOOKING_MAX_JITTER=0.1
RETRY_BOOKING_USE_CIRCUIT_BREAKER=true

# Unknown Error Strategy
RETRY_ON_UNKNOWN_ERROR=true
RETRY_UNKNOWN_MAX_ATTEMPTS=2
RETRY_UNKNOWN_INITIAL_DELAY=2000
RETRY_UNKNOWN_MAX_DELAY=8000
RETRY_UNKNOWN_BACKOFF_MULTIPLIER=2
RETRY_UNKNOWN_MAX_JITTER=0.1
RETRY_UNKNOWN_USE_CIRCUIT_BREAKER=true

# Operation-Specific Overrides
# Navigation Operations
RETRY_NAVIGATION_OPERATION_MAX_ATTEMPTS=4

# Slot Search Operations
RETRY_SLOT_SEARCH_MAX_ATTEMPTS=3
RETRY_SLOT_SEARCH_INITIAL_DELAY=1500

# Booking Execution Operations
RETRY_BOOKING_EXECUTION_MAX_ATTEMPTS=2
RETRY_BOOKING_EXECUTION_INITIAL_DELAY=2000

# Checkout Operations
RETRY_CHECKOUT_MAX_ATTEMPTS=2
RETRY_CHECKOUT_INITIAL_DELAY=3000