{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "downlevelIteration": true,
    "lib": ["ES2022", "DOM"],
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}